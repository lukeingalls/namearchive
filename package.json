{
  "name": "namearchive-monorepo",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run --filter @namearchive/server dev",
    "dev:client": "bun run --filter @namearchive/client dev",
    "build": "bun run --filter @namearchive/client build",
    "start": "bun run --filter @namearchive/server start"
  },
  "packageManager": "bun@1.2.19",
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/react-dom": "^19.2.3"
  }
}
